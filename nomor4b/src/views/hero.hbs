{{#>layout title="Detaill Hero"}}
<section class="text-white">
    <div class="row mx-5">

        <div class="col-12 col-md-12 col-lg-11 col-xl-6 mt-3 d-md-flex">
            <div class="w-100">
                <img src="{{hero.photo}}"
                    class="card-img-top" height="500" alt="hero">
                    {{#if (checkSelected hero.User.id user.id)}}
                <div class="mt-3">
                    <a href="/edit/{{hero.id}}" class="btn bg-orange w-100">Edit</a>
                     <form action="/delete/{{hero.id}}" method="POST" class="w-100" id="delete-hero-{{hero.id}}">
                <button type="button" class="btn outline-orange w-100 my-3" id="btn-delete-hero-{{hero.id}}"
                  onclick="deleteHero({{hero.id}})">Delete</button>
              </form>
                   
                </div>
                {{/if}}
            </div>
            <div class="text-white ms-3 w-100">
                <h2>{{hero.name}}</h2>
                <h5>{{hero.Type.name}}</h5>
                <p>created by  {{hero.User.username}}</p>
            </div>
        </div>

    </div>
</section>
{{/layout}}