<div>
  <table class="table table-dark table-hover">
    <thead>

      <tr>
        <th scope="col">No</th>
        <th scope="col">Nama Tipe</th>
        <th scope="col">Action</th>

      </tr>

    </thead>
    <tbody>
      {{#each types}}
        <tr>
          <th scope="row"> {{increment @index}}</th>
          <td>{{this.name}}</td>
          <td>
            <div>
              <form
                action="/type/delete/{{this.id}}"
                method="POST"
                id="delete-type-{{this.id}}"
              >
                <button
                  type="button"
                  class="btn bg-orange"
                  id="btn-delete-type-{{this.id}}"
                  onclick="deleteType({{this.id}})"
                >Delete</button>
                <a href="/type/edit/{{this.id}}" class="btn bg-orange">Edit</a>
              </form>
            </div>

          </td>

        </tr>
      {{/each}}
    </tbody>
  </table>
</div>